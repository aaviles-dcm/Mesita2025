@page "/tickets/create"
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Create Ticket</h3>

<EditForm Model="@ticket" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <InputText id="title" class="form-control" @bind-Value="ticket.Title" />
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <InputTextArea id="description" class="form-control" @bind-Value="ticket.Description" />
    </div>

    <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <InputSelect id="category" class="form-control" @bind-Value="ticket.CategoryId">
            <option value="0">Select a Category</option>
            @if (categories != null)
            {
                foreach (var cat in categories)
                {
                    <option value="@cat.CategoryId">@cat.Name</option>
                }
            }
        </InputSelect>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider

@code {
    private Ticket ticket = new Ticket();
    private Category[]? categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await Http.GetFromJsonAsync<Category[]>("api/categories");
    }

    private async Task HandleValidSubmit()
    {
        if (ticket.CategoryId == 0) return; // Basic validation

        // Get current user ID
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);

        if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out Guid userId))
        {
            ticket.CreatedById = userId;
        }
        else
        {
            // Fallback or error handling if user is not logged in (should be handled by [Authorize] anyway)
            Console.WriteLine("Error: Could not determine current user ID.");
            return; 
        }

        ticket.DateCreated = DateTime.UtcNow;
        ticket.Status = TicketStatus.New;

        var response = await Http.PostAsJsonAsync("api/tickets", ticket);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            var errorContent = await response.Content.ReadAsStringAsync();
            Console.WriteLine($"Error creating ticket: {response.StatusCode}");
            Console.WriteLine($"Error details: {errorContent}");
        }
    }
}
